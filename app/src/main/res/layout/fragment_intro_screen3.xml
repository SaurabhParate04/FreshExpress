<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgIntro3"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:contentDescription="@string/introImage3"
        android:src="@drawable/img3" />

    <TextView
        android:id="@+id/txtIntro3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgIntro3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/easy_payments"
        android:textColor="#000"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtIntro3"
        android:layout_margin="8dp"
        android:text="@string/intro3"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="italic" />

</RelativeLayout>