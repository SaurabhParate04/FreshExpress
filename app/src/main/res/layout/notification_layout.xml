<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="1dp" >

    <ImageView
        android:id="@+id/imgLogoNotification"
        android:layout_width="68dp"
        android:layout_height="60dp"
        android:contentDescription="@string/logo"
        android:src="@drawable/app_logo_coloured" />

    <TextView
        android:id="@+id/txtTitleNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/imgLogoNotification"
        android:text="@string/fresh_express"
        android:textColor="#000"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/txtContentNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTitleNotification"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/imgLogoNotification"
        android:text="@string/fresh_express"
        android:textColor="@android:color/darker_gray"
        android:textSize="15sp"
        android:textStyle="italic"
        android:maxLines="1"/>

</RelativeLayout>